{
  "multipart": [
    { "apply": { "model": "chicken_roost:block/pipe_center_2" } },

    { "when": { "up": true },    "apply": { "model": "chicken_roost:block/pipe_up_2" } },
    { "when": { "down": true },  "apply": { "model": "chicken_roost:block/pipe_down_2" } },
    { "when": { "north": true }, "apply": { "model": "chicken_roost:block/pipe_north_2" } },
    { "when": { "south": true }, "apply": { "model": "chicken_roost:block/pipe_south_2" } },
    { "when": { "east": true },  "apply": { "model": "chicken_roost:block/pipe_east_2" } },
    { "when": { "west": true },  "apply": { "model": "chicken_roost:block/pipe_west_2" } }
  ]
}
