{
  "multipart": [
    { "apply": { "model": "chicken_roost:block/pipe_center_3" } },

    { "when": { "up": true },    "apply": { "model": "chicken_roost:block/pipe_up_3" } },
    { "when": { "down": true },  "apply": { "model": "chicken_roost:block/pipe_down_3" } },
    { "when": { "north": true }, "apply": { "model": "chicken_roost:block/pipe_north_3" } },
    { "when": { "south": true }, "apply": { "model": "chicken_roost:block/pipe_south_3" } },
    { "when": { "east": true },  "apply": { "model": "chicken_roost:block/pipe_east_3" } },
    { "when": { "west": true },  "apply": { "model": "chicken_roost:block/pipe_west_3" } }
  ]
}
